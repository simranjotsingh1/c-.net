int CurrentReading;
            Console.WriteLine("Current meter Reading : ");
            CurrentReading = Convert.ToInt32(Console.ReadLine());

            int LastReading;
            Console.WriteLine("Meter reading reported on last months bill : ");
            LastReading = Convert.ToInt32(Console.ReadLine());
            int TotalUsed;
            TotalUsed = CurrentReading - LastReading;
            Console.WriteLine("Total KWH's Used :{0}", TotalUsed);

            Console.WriteLine(" ");
            Console.WriteLine(" ");
            Console.WriteLine(" ");

            Console.WriteLine("Total KWH's Used :{0}", TotalUsed);
            Double charge = 0.095;
            Console.WriteLine("Charge per KWH :{0}", charge.ToString("C"));
            Double TotalEnergy;
            TotalEnergy = TotalUsed * charge;
            Console.WriteLine("Total Energy charge  :{0}", TotalEnergy.ToString("C"));

            Console.WriteLine(" ");
            Console.WriteLine(" ");
            Console.WriteLine(" ");
            Console.WriteLine("Total Energy charge  :{0}", TotalEnergy.ToString("C"));
            int MonthlyFees = 10;
            Console.WriteLine("Standard monthly Fees :"+ MonthlyFees.ToString("C"));
            double TotalBill;
            TotalBill = TotalEnergy + MonthlyFees;
            Console.WriteLine("Total bill: " + TotalBill.ToString("C"));

            Console.ReadLine();
            
            
            
            
            
            int r;
            Console.WriteLine("Enter the radius of sphere");
            r = Convert.ToInt32(Console.ReadLine());
            int π = 22 / 7;
            int A;
            A = 4 * π * r * r;
            Console.WriteLine("Area of sphere is {0}", A);

            Console.WriteLine(" ");
            Console.WriteLine(" ");
            Console.WriteLine(" ");

            /* Volume of Sphere   */

            int h;
            Console.WriteLine("Enter the height of the cone :");
            h = Convert.ToInt32(Console.ReadLine());

            int V;
            V = π * r * r * h / 3;
            Console.WriteLine("Volume of cone is {0}", V);



            Console.ReadLine();

